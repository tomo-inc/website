---
import Container from "../components/container.astro";
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/navbar/navbar.astro";
import Hero from "../components/hero.astro";
import Footer from "../components/footer.astro";

import "../fonts.css";
---

<Layout title="Tomo - Web3 Social Platform for Creators and Supporters">
  <div class="back-style sm:!bg-cover sm:bg-bgDesktop bg-bgMobile bg-no-repeat">
    <Navbar />
    <Container class="flex flex-col">
      <Hero />
      <Footer />
    </Container>
  </div>
</Layout>

<script>
  import AOS from "aos";
  import "aos/dist/aos.css";
  AOS.init({ duration: 1000 });
</script>

<script>
  const currentURL = window.location.href;
  const hashIndex = currentURL.indexOf("#");
  const cleanURL =
    hashIndex !== -1 ? currentURL.substring(0, hashIndex) : currentURL;

  const queryIndex = cleanURL.indexOf("?");
  const queryString =
    queryIndex !== -1 ? cleanURL.substring(queryIndex + 1) : "";

  if (queryString) {
    const urlParams = new URLSearchParams(queryString);
    let codeParam = null;
    let stateParam = null;

    urlParams.forEach((value, key) => {
      if (key.toLowerCase() === "code") {
        codeParam = value;
      }
      if (key.toLowerCase() === "state") {
        stateParam = value;
      }
    });

    if (codeParam && stateParam === "tomo_x_facebook") {
      const newURL = `tomo://tomo.inc/?code=${codeParam}&state=${stateParam}`;
      window.location.replace(newURL);
    }
  }
</script>

<style>
  .back-style {
    background-position: 0 0, 100% 100%;
    background-size: 100%, 100%;
  }
</style>
