---
import "@fontsource/inter/variable.css";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@tomo.inc" />
    <meta name="twitter:creator" content="@mobus" />
    <meta property="og:url" content="https://tomo.inc" />
    <meta property="og:title" content="Tomo Social Wallet" />
    <meta property="og:description" content="Tomo is an all-in-one Web3 social wallet designed to bring the mass adoption of crypto." />
    <meta property="og:image" content="https://pub-6c52100fa9ac41f681f0713eac878541.r2.dev/card.jpg" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
  <style>
    html {
      font-family: Urbanist, sans-serif;
      scroll-behavior: smooth;
    }

    html::-webkit-scrollbar {
      display: none;
    }

    body {
      margin: 0;
      overflow-x: hidden;
    }
  </style>
</html>
