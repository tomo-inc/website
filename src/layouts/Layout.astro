---
import "@fontsource/inter/variable.css";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta property="og:title" content="Tomo Social Wallet" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://tomo.inc" />
    <meta
      property="og:image"
      content="https://pub-6c52100fa9ac41f681f0713eac878541.r2.dev/card.jpg"
    />
    <meta
      property="og:description"
      content="Tomo is an all-in-one Web3 social wallet designed to bring the mass adoption of crypto."
    />
    <meta property="og:site_name" content="Tomo Web Site" />
    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@mobus" />
    <meta name="twitter:title" content="Tomo Social Wallet" />
    <meta
      name="twitter:description"
      content="Tomo is an all-in-one Web3 social wallet designed to bring the mass adoption of crypto."
    />
    <meta
      name="twitter:image"
      content="https://pub-6c52100fa9ac41f681f0713eac878541.r2.dev/card.jpg"
    />
  </head>
  <body>
    <slot />
  </body>
  <style>
    html {
      font-family: Urbanist, sans-serif;
      scroll-behavior: smooth;
    }

    html::-webkit-scrollbar {
      display: none;
    }

    body {
      margin: 0;
      overflow-x: hidden;
      background-color: #fcefeb;
    }
  </style>
</html>
