    <Carousel />
    <div
      class="flex flex-col justify-center items-start gap-7 md:gap-8 font-[Helvetica] leading-none text-white"
    >
      <span class="lg:text-[60px] mdl:text-6xl md:text-5xl text-4xl font-medium"
        >Tomo App</span
      >
      <span class="max-w-[454px] text-sm md:text-base">
        Connect, trade, and earn through your all-in-one Web3 social wallet.</span
      >
      <div class="flex flex-wrap max-w-[400px] gap-4">
        <a
          class="cursor-pointer"
          target="_blank"
          href="https://play.google.com/store/apps/details?id=tomo.app.unyx"
        >
          <img class="w-[179px]" src="/images/google-play.svg" alt="" />
        </a>
        <a
          class="cursor-pointer"
          target="_blank"
          href="https://apps.apple.com/us/app/tomo-inc/id6468010287"
        >
          <img class="w-[179px]" src="/images/app-store.svg" alt="app store" />
        </a>
        <a
          class="cursor-pointer"
          target="_blank"
          href="https://pub-6c52100fa9ac41f681f0713eac878541.r2.dev/app-prod-release.apk"
        >
          <img class="w-[179px]" src="/images/android.svg" alt="apk" />
