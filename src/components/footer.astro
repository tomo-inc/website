---
import CenterContainer from "./centerContainer.astro";
---

<script>
  document
    .getElementById("termsLink")
    .setAttribute("href", `${location.origin}/terms`);
  document
    .getElementById("privacyLink")
    .setAttribute("href", `${location.origin}/privacy`);
</script>
<main class="w-full pb-[64px] md:mt-[100px] px-6 md:px-0 relative">
  <CenterContainer class="flex flex-col gap-[16px]">
    <div class="flex flex-col gap-5 items-start md:hidden mb-20">
      <a href="/" class="text-lg flex items-center">
        <img class="w-[44px] h-[32px]" src="/images/logo.svg" alt="" />
        <span
          class="font-['NeueHaas'] pl-1.5 text-normal text-[20px] tracking-3"
          >TOMO</span
        >
      </a>
      <div class="flex justify-between w-full">
        <a
          href="https://m.tomo.inc/x@tomo_social"
          target="_blank"
          class="cursor-pointer flex gap-[10px]"
        >
          <span class="font-['NeueHaas'] text-normal text-[16px] tracking-0.8"
            >Go to App</span
          >
          <img src="/images/link.svg" alt="" />
        </a>
        <!-- <a
          href="https://docs.tomo.inc"
          target="_blank"
          class="cursor-pointer flex gap-[10px]"
        >
          <span class="font-['NeueHaas'] text-normal text-[16px] tracking-0.8"
            >Instagram</span
          >
          <img src="/images/link.svg" alt="" />
        </a> -->
      </div>
      <div class="flex justify-between w-full">
        <a
          href="https://docs.tomo.inc"
          target="_blank"
          class="cursor-pointer flex gap-[10px]"
        >
          <span class="font-['NeueHaas'] text-normal text-[16px] tracking-0.8"
            >Doc</span
          >
          <img src="/images/link.svg" alt="" />
        </a>
        <a
          href="https://twitter.com/tomo_social"
          target="_blank"
          class="cursor-pointer flex gap-[10px]"
        >
          <span class="font-['NeueHaas'] text-normal text-[16px] tracking-0.8"
            >X</span
          >
          <img src="/images/link.svg" alt="" />
        </a>
      </div>
    </div>
    <div
      class="w-full flex items-center justify-center gap-[8.5px] text-pink font-['NeueHaas'] text-sm leading-[18px] tracking-0.7 font-[450]"
    >
      <a id="termsLink" class="cursor-pointer" target="_blank"
        >Terms of Service</a
      >
      <span class="inline-block w-[1px] h-[12px] bg-pink"></span>
      <a id="privacyLink" class="cursor-pointer" target="_blank"
        >Privacy Policy</a
      >
    </div>
    <div
      class="text-center w-full text-sm text-normal leading-[18px] tracking-0.7 font-['NeueHaas']"
    >
      Copyright: @2023 Unyx Inc. All Rights Reserved.
    </div>
  </CenterContainer>
</main>
